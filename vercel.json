{
  "version": 2,
  "name": "openspec-magnum-opus",
  "buildCommand": "pnpm run build --filter=packages/web-platform",
  "outputDirectory": "packages/web-platform/dist",
  "framework": "vite",
  "installCommand": "pnpm install --no-frozen-lockfile",
  "devCommand": "pnpm run dev --filter=packages/web-platform",
  "github": {
    "silent": true
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
