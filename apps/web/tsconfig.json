{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2020"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": true,
    "incremental": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "@cathedral/*": [
        "../../packages/*"
      ],
      "@mystical-sound-engine/*": [
        "../../packages/mystical-sound-engine/*"
      ],
      "@sacred-geometry-core/*": [
        "../../packages/sacred-geometry-core/*"
      ],
      "@trauma-safety-validator/*": [
        "../../tools/validate/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "pages/**/*",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src"
  ]
}
