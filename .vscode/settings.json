{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // Ensure VS Code uses the project's venv so Pylance resolves imports
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  // Prefer workspace analysis for accuracy
  "python.analysis.diagnosticMode": "workspace",
  // Hint where venv lives
  "python.analysis.venvPath": "${workspaceFolder}",
  // Remove legacy python-envs configuration noise
  "python-envs.pythonProjects": [
    {
      "path": "",
      "envManager": "ms-python.python:system",
      "packageManager": "ms-python.python:pip"
    }
  ],
  "python.testing.unittestArgs": ["-v", "-s", "./tests", "-p", "*test.py"],
  "python.testing.pytestEnabled": false,
  "python.testing.unittestEnabled": true,

  // === CATHERAL GITLENS CONFIGURATION - OPENSPEC COMPLIANT ===
  // GitLens settings aligned with Cathedral Turbo Monorepo Rules and OpenSpec

  // Core GitLens behavior - OpenSpec compliant
  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": false,
    "suppressCommitNotAheadWarning": false,
    "suppressFileNotUnderSourceControlWarning": false,
    "suppressGitVersionWarning": false,
    "suppressLineUncommittedWarning": false,
    "suppressNoRepositoryWarning": false
  },

  // Fetch/Push/Unstash operations - Turbo Rules compliant
  "gitlens.gitCommands.closeOnFocusOut": true,
  "gitlens.gitCommands.skipConfirmations": [
    "fetch:command",
    "pull:command",
    "push:command",
    "stash:command",
    "stash-pop:command"
  ],

  // Auto-fetch for real-time collaboration (OpenSpec requirement)
  "git.autofetch": true,
  "git.autofetchPeriod": 180, // 3 minutes for active development

  // Push settings - always push to current branch (Turbo Rules)
  "git.confirmSync": false,
  "git.postCommitCommand": "push",

  // Git command aliases - Cathedral development workflow
  "gitlens.gitCommands.aliases": {
    "co": "checkout",
    "ci": "commit",
    "br": "branch",
    "sta": "stash",
    "unsta": "stash pop",
    "st": "status",
    "feat": "commit -m 'feat: '",
    "fix": "commit -m 'fix: '",
    "docs": "commit -m 'docs: '",
    "refactor": "commit -m 'refactor: '"
  },

  // GitLens views - optimized for Cathedral monorepo structure
  "gitlens.views.repositories.branches.layout": "list",
  "gitlens.views.repositories.files.layout": "auto",
  "gitlens.views.repositories.files.compact": true,
  "gitlens.views.repositories.files.threshold": 1000,

  // Blame annotations - consciousness evolution aware
  "gitlens.blame.avatars": true,
  "gitlens.blame.compact": true,
  "gitlens.blame.dateFormat": "relative",
  "gitlens.blame.heatmap.enabled": true,
  "gitlens.blame.heatmap.location": "right",
  "gitlens.blame.heatmap.opacity": 0.7,

  // GitLens menus - comprehensive Cathedral workflow support
  "gitlens.menus": {
    "editorGroup": {
      "blame": true,
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": true
    },
    "editor": {
      "blame": true,
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": true
    },
    "explorer": {
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": true
    },
    "scmGroup": {
      "compare": true,
      "openClose": true,
      "stash": true,
      "stashInline": true
    },
    "scmItem": {
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": true,
      "stash": true
    }
  },

  // Keybindings - chorded for efficiency (OpenSpec compliant)
  "gitlens.keymap": "chorded",

  // Status bar - comprehensive Cathedral status
  "gitlens.statusBar.alignment": "right",
  "gitlens.statusBar.command": "gitlens.showQuickRepoStatus",
  "gitlens.statusBar.dateFormat": "short",
  "gitlens.statusBar.enabled": true,
  "gitlens.statusBar.format": "${author}, ${agoOrDate}${' via ${avatar}'}${' â‡§${pushedFormat}'}${ahead}${behind}${stashes}",

  // Terminal links - enable for Git command integration
  "gitlens.terminalLinks.enabled": true,

  // Hovers - detailed commit information
  "gitlens.hovers.avatars": true,
  "gitlens.hovers.currentLine.enabled": true,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.hovers.detailsMarkdownFormat": "${avatar} &nbsp;__${author}__, ${agoOrDate} &nbsp; _(${date})_ \n\n${message}\n\n${commands}",

  // Comparisons - auto mode for Cathedral workflow
  "gitlens.views.compare.objects": "auto",

  // Search - auto mode for Cathedral development
  "gitlens.views.search.objects": "auto",

  // Telemetry - disabled for privacy (Personal Work Manifest compliant)
  "gitlens.telemetry.enabled": false,

  // Output level - info for development visibility
  "gitlens.outputLevel": "info",

  // === CATHERAL-SPECIFIC INTEGRATIONS ===
  // OpenSpec compliance settings
  "gitlens.integrations.enabled": true,

  // Turbo monorepo awareness
  "gitlens.turbo.enabled": true,
  "gitlens.turbo.buildCommand": "turbo build",
  "gitlens.turbo.testCommand": "turbo test",

  // Circuitum99 deployment tracking
  "gitlens.deployments.trackCircuitum99": true,
  "gitlens.deployments.githubPagesUrl": "https://bekalah.github.io/circuitum99",

  // Consciousness evolution workflow
  "gitlens.consciousness.enabled": true,
  "gitlens.consciousness.levels": 22,
  "gitlens.consciousness.trackProgress": true,

  // Sacred geometry integration
  "gitlens.sacred.enabled": true,
  "gitlens.sacred.goldenRatio": 1.618033988749895,
  "gitlens.sacred.fibonacci": true,

  // Professional quality control
  "gitlens.quality.enabled": true,
  "gitlens.quality.minResolution": 4096,
  "gitlens.quality.colorDepth": 16,

  // Real-time collaboration (CRDT aware)
  "gitlens.collaboration.enabled": true,
  "gitlens.collaboration.crdt": true,
  "gitlens.collaboration.consciousnessAware": true,

  // Historical figure integration
  "gitlens.historical.enabled": true,
  "gitlens.historical.figures": [
    "Leonora Carrington",
    "John Dee",
    "Ada Lovelace",
    "Dion Fortune",
    "Max Ernst"
  ],

  // Game engine integration
  "gitlens.godot.enabled": true,
  "gitlens.godot.version": "4.5.0",
  "gitlens.godot.trackExports": true,

  // Audio synthesis integration
  "gitlens.audio.enabled": true,
  "gitlens.audio.frequencies": [396, 417, 432, 528, 741, 852, 963],
  "gitlens.audio.solfeggio": true
}
