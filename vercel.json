{
  "version": 2,
  "name": "cathedral-creative-ecosystem",
  "builds": [
    {
      "src": "apps/web/package.json",
      "use": "@vercel/next",
      "config": {
        "outputDirectory": "apps/web/.next"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/apps/web/$1"
    }
  ],
  "build": {
    "env": {
      "NEXT_PUBLIC_CATHEDRAL_VERSION": "1.0.0",
      "NEXT_PUBLIC_ENABLE_AUDIO": "true",
      "NEXT_PUBLIC_ENABLE_3D": "true"
    }
  },
  "functions": {
    "apps/web/pages/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
