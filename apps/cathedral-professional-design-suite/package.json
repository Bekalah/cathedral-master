    "lucide-react": "^0.400.0",
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "three": "^0.170.0",
    "@react-three/fiber": "^8.0.0",
    "@react-three/drei": "^9.0.0",
